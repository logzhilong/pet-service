<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-lazy-init="false" default-autowire="byName">

	<bean class="com.momoplan.pet.commons.cache.utils.SpringContextHolder" lazy-init="false" />

	<bean id="redisPoolConfig" class="redis.clients.jedis.JedisPoolConfig" >
		<property name="maxActive" value="${cache.pool.max.active}" />
		<property name="maxIdle" value="${cache.pool.max.idle}" />
		<property name="maxWait" value="${cache.pool.max.wait}" />
		<property name="testOnBorrow" value="${cache.pool.test.on.borrow}" />
	</bean>
	
	<bean id="JedisShardInfoList" class="java.util.ArrayList" >
  		<constructor-arg>
		   	<list>
		   		<bean class="redis.clients.jedis.JedisShardInfo">
					<constructor-arg index="0" value="${cache.host_1}" />
					<constructor-arg index="1" value="${cache.port_1}" />
					<property name="password" value="${cache.pwd}" />
				</bean>
			</list>
	  	</constructor-arg>
  	</bean>
	
	<bean id="shardedJedisPool" class="redis.clients.jedis.ShardedJedisPool" >
		<constructor-arg index="0">
			<ref bean="redisPoolConfig" />
		</constructor-arg>
		<constructor-arg index="1">
			<ref bean="JedisShardInfoList" />
		</constructor-arg>
	</bean>
	
	<bean id="redisPool" class="com.momoplan.pet.commons.cache.pool.RedisPool">
		<property name="shardedJedisPool" >
			<ref bean="shardedJedisPool" />
		</property>
		<property name="cacheEnable" value="${cache.enable}" />
	</bean>
	
</beans>