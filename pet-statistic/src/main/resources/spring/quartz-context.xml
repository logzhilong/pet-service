<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-lazy-init="false" default-autowire="byName">
	
	<!-- 线程执行器配置，用于任务注册 -->
	<bean id="executor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
	 <property name="corePoolSize" value="10" />
	 <property name="maxPoolSize" value="100" />
	 <property name="queueCapacity" value="500" />
	</bean>
	
	<!-- 业务对象 -->
	<bean id="startTask" class="com.momoplan.pet.framework.statistic.scheduler.PetTask" />
	<!-- 调度业务 -->
	<bean id="jobStartTask" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
	 <property name="targetObject" ref="startTask" />
	 <property name="targetMethod" value="startTask" />
	</bean>
	
	<bean id="cronTriggerStartTask" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
	 <property name="jobDetail" ref="jobStartTask" />
	 <property name="cronExpression" value="0 0 0 * * ?" />
	</bean>
	
	<!-- 设置调度 -->
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
	 <property name="triggers">
	  <list>
	   <ref bean="cronTriggerStartTask" />
	  </list>
	 </property>
	</bean>

</beans>